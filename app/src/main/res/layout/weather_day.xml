<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <ImageView
            android:layout_width="41dp"
            android:layout_height="33dp" app:srcCompat="@android:color/holo_blue_dark"
            android:id="@+id/weather_pic"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/high_temp"
            app:layout_constraintBaseline_toBaselineOf="@+id/day"
            android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/low_temp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/day"/>
</android.support.constraint.ConstraintLayout>